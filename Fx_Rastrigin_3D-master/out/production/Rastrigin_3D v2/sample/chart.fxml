<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.ScatterChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="1150.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ChartController">
   <bottom>
      <Button fx:id="button" mnemonicParsing="false" text="Start" BorderPane.alignment="CENTER" />
   </bottom>
   <left>
      <ScatterChart fx:id="mseChart" prefWidth="500.0" title="Błąd MSE" BorderPane.alignment="CENTER">
        <xAxis>
          <NumberAxis label="Epoka" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis label="Bład" side="LEFT" />
        </yAxis>
      </ScatterChart>
   </left>
   <right>
      <SplitPane dividerPositions="0.7274247491638796" prefWidth="650.0" BorderPane.alignment="CENTER">
         <items>
            <ScatterChart fx:id="chart" minWidth="500.0" prefWidth="500.0" title="Błąd">
              <xAxis>
                <NumberAxis label="Co mialo wyjsc" side="BOTTOM" fx:id="x" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="y" label="Co wyszlo" side="LEFT" />
              </yAxis>
            </ScatterChart>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
               <children>
                  <Label fx:id="whatToDo" text="Podaj liczbe warstw" />
                  <TextField fx:id="input_field" />
                  <Button fx:id="confirm" mnemonicParsing="false" text="Zatwierdz" />
                  <Text fx:id="information" strokeType="OUTSIDE" strokeWidth="0.0" />
               </children>
            </VBox>
         </items>
      </SplitPane>
   </right>
</BorderPane>
